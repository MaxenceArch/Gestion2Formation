<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Employés</title>
    <style>
        /* Styles pour la barre de navigation */
        .navbar {
            background: linear-gradient(to right, #8e44ad, #c0392b); /* Dégradé de couleurs */
            padding: 10px 20px;
            border-radius: 10px; /* Coins arrondis */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            display: flex;
            justify-content: flex-end;
        }

        .navbar a {
            color: #fff;
            padding: 10px 20px;
            border-radius: 4px; /* Coins arrondis */
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .navbar a:hover {
            background-color: rgba(255, 255, 255, 0.1); /* Légère opacité au survol */
        }

        /* Styles pour le contenu */
        .content {
            padding: 20px;
        }

        /* Style pour le message d'alerte */
        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 4px;
            background-color: #17a2b8;
            color: #fff;
        }

        /* Styles personnalisés pour l'affichage des inscriptions */
        .employe-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
            border: 1px solid #ddd;
            margin-bottom: 20px;
            background-color: #f9f9f9;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .employe-container:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .employe-details {
            flex-grow: 1;
        }

        .employe-details b {
            color: #333;
        }

        .employe-buttons {
            display: flex;
            align-items: center;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-left: 10px;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
        }

        .btn-primary {
            background: linear-gradient(to right, #8e44ad, #c0392b);
            color: #fff;
        }

        .btn-success {
            background-color: #28a745;
            color: #fff;
        }

        .btn-info {
            background-color: #17a2b8;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <a href="{{ path('app_formation_ajouter') }}">Ajouter une formation</a>
        <a href="{{ path('app_affProduit') }}">Afficher les produits</a>
        <a href="{{ path('app_aff') }}">Afficher les formations</a>
        <a href="{{ path('app_affEmploye') }}">Afficher les employés</a>
        <a href="{{ path('app_liste_inscription_admin') }}">Inscriptions en attente</a>
        <a href="{{ path('app_liste_inscription_accepte') }}">Inscriptions Acceptée</a>
        <a href="{{ path('app_liste_inscription_refuse') }}">Inscriptions Refusée</a>
        <a href="{{ path('app_login') }}">Se déconnecter</a>
    </div>

    {% if message %}
        <div class="alert">{{ message }}</div>
    {% endif %}

    <div class="content">
        {% for employe in ensEmploye %}
            {% if employe.statut == "1" %}
                <div class="employe-container">
                    <div class="employe-details">
                        <b>id de l'employé :</b> {{ employe.id }}<br/>
                        <b>login de l'employé :</b> {{ employe.login }}<br/><br/>
                        </div>
                        <div class="formation-buttons">
                            <a href="{{ path('app_aff_inscr_par_Emp', {'id': employe.id}) }}" class="btn btn-primary">Afficher les inscriptions</a>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</body>
</html>
